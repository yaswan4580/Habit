@model IEnumerable<Habit.Models.Habits>
@{
    ViewData["Title"] = "Completed Habits";
}

<h2 class="text-success">🎉 Completed Habits</h2>

@if (!Model.Any())
{
    <p>No completed habits yet.</p>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Habit Name</th>
                <th>Frequency</th>
                <th>Start Date</th>
                <th>Completed Days</th>
                <th>Target Days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var habit in Model)
            {
                <tr>
                    <td>@habit.HabitName</td>
                    <td>@habit.Frequency</td>
                    <td>@habit.StartDate.ToShortDateString()</td>
                    <td>@habit.CompletedDays</td>
                    <td>@habit.TargetDays</td>
                </tr>
            }
        </tbody>
    </table>
}
